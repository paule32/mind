import os
import subprocess
import sys
import time

import AISpeaker

class AIBirth:
    def __init__(self):
        print "die Erstellung der KI wird vorbereitet..."
        self.timefmt = True # 24/12 time format
        self.day = ""
        self.hour = 0
        self.minute = 0
        self.second = 0
        pass

    def start_ok(self):
        AISpeaker.say("Hallo Jens")
        
        #os.system("./trans.sh -b -s de -t de -p 'Der kuenstliche Mensch KC85 lebt nun'")

    def start(self):
        tmpday  = time.strftime("%a")
        if tmpday == "Mon":
            self.day = "Montag"
        elif tmpday == "Tur":
            self.day = "Dienstag"
        elif tmpday == "Wed":
            self.day = "Mittwoch"
        elif tmpday == "Thu":
            self.day = "Donnerstag"
        elif tmpday == "Fri":
            self.day = "Freitag"
        elif tmpday == "Sat":
            self.day = "Samstag"
        elif tmpday == "Sun":
            self.day = "Sonntag"

        if self.timefmt == True:
            self.hour = time.strftime("%H")
        else:
            self.hour = time.strftime("%I")
            
        self.minute = time.strftime("%M")
        self.second = time.strftime("%S")
            
        self.start_ok()
        
    def end(self)
        print